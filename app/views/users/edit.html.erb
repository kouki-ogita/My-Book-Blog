<div class="text-center">
  <h1><i class="fas fa-user-edit"></i>  ユーザー編集ページ</h1>
</div>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(model: @user, local: true) do |f| %>
    
      <div class="form-group">
        <%= f.label :name, 'ユーザー名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, 'プロフィール画像' %>
        <%= f.file_field :image, class: '#' %>
      </div>
    
      <div class="form-group">
        <%= f.label :profile, 'プロフィール、自己紹介文' %>
        <%= f.text_area :profile, class: 'form-control', size: '20x10' %>
      </div>
      
      <%= f.submit '編集する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>