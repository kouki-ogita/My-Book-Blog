<%= render 'profile', user: @user %>

<%= render 'menu', user: @user %>

<h5>カテゴリー一覧</h5>

<% if current_user == @user %>
  <%= link_to 'カテゴリーの新規作成', new_category_path, type: "button", class: "btn btn-success" %>
<% end %>

<% if @categories.any? %>
  <div class="category-each-do">
    <% @categories.each do |category| %>
      <h4><%= link_to category.name, category_path(category) %></h4>
    <% end %>
  </div>
  <%= paginate @categories %>
<% end %>