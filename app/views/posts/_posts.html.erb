<% if posts.any? %>
  <div class="container">
    <div class="row">
      <% posts.each do |post| %>
        <div class="col-lg-3 col-sm-4">
          <div class="card" style="width: 12rem;">
            <div class="column flex-direction:row">    
              <div class="card-body">
                <% if post.image? %>
                  <%= image_tag post.image.to_s, class: "card-img-top" %>
                <% else %>  
                  <%= image_tag "/assets/defaultpost.png", class: "card-img-top" %>
                <% end %>
              </div> 
              <div class="card-footer">
                <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
                <div class="post-category">
                  <% if post.category_id? %>
                    <h6><span class="badge badge-info"><%= post.category.name %></span><h6>
                  <% else %>
                    <h6><span class="badge badge-info">分類なし</span><h6>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate posts %>
<% end %>