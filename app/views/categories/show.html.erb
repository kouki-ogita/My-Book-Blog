<div class="text-center">
  <h1>カテゴリー詳細</h1>
</div>

<div class="text-left">
  <h2><%= @category.name %></h2>
</div>

<% if current_user == @category.user %>
  <%= link_to 'カテゴリー名を編集する', edit_category_path(@category), type: "button", class: "btn btn-success" %>
  <%= link_to 'カテゴリー名を削除する', category_path(@category), method: :delete, data: { confirm: "本当に削除してもよろしいですか？" }, type: "button", class: "btn btn-danger" %>
<% end %>  

<div class="container">
  <div class="row">
    <% @category.posts.each do |post| %>
      <div class="col-md-3">
        <div class="card" style="width: 15rem;">
          <div class="column flex-direction:row">    
            <div class="card-body">
              <% if post.image? %>
                <%= image_tag post.image.to_s, class: "card-img-top" %>
              <% else %>  
                <%= image_tag "/assets/defaultpost.png", class: "card-img-top" %>
              <% end %>
            </div> 
            <div class="card-footer">
              <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
