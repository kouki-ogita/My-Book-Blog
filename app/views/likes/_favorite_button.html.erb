<% if logged_in? %>
  <% if current_user.favoriting?(post) %>
      <%= form_with(model: current_user.likes.find_by(post_id: post.id), local: true, method: :delete) do |f| %>
        <%= hidden_field_tag :favorite_id, post.id %>
        <%= f.submit 'いいねを外す', class: 'btn btn-danger btn-sm' %>
      <% end %>
    <% else %>
      <%= form_with(model: current_user.likes.build, local: true) do |f| %>
        <%= hidden_field_tag :favorite_id, post.id %>
        <%= f.submit 'いいねする', class: 'btn btn-primary btn-sm' %>
      <% end %>
  <% end %>
<% end %>